---
import HamburgerIcon from '../assets/icons/hamburger.svg';
import GithubIcon from '../assets/icons/github.svg';
import '../styles/global.css';

const { title, description = "Stupid Web Tricks - Amazing web effects, animations, and techniques" } = Astro.props;
const basePath = (Astro.site?.pathname ?? '').replace(/\/$/, '');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={`${basePath}/favicon-96x96.png`} sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href={`${basePath}/favicon.svg`} />
    <link rel="shortcut icon" href={`${basePath}/favicon.ico`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${basePath}/apple-touch-icon.png`} />
    <meta name="apple-mobile-web-app-title" content="Stupid Web Tricks" />
    <link rel="manifest" href={`${basePath}/site.webmanifest`} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="author" content="Rich Lewis" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Stupid Web Tricks" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="@richlewis007" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Bangers&family=Fredoka:wght@300;400;500;600;700&display=swap" as="style">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bangers&family=Fredoka:wght@300;400;500;600;700&display=swap">
    <style is:inline>
      :root:not(.fonts-loaded) .bangers-font { font-family: 'Impact', 'Arial Black', sans-serif !important; }
      :root.fonts-loaded .bangers-font { font-family: 'Bangers', 'Impact', 'Arial Black', sans-serif !important; }
    </style>
    <script is:inline>
      (function() {
        const root = document.documentElement;
        const markFontsLoaded = () => {
          root.classList.add('fonts-loaded');
          try {
            sessionStorage.setItem('fonts-loaded', 'true');
          } catch (_) {}
        };

        try {
          if (sessionStorage.getItem('fonts-loaded') === 'true') {
            markFontsLoaded();
            return;
          }
        } catch (_) {}

        if ('fonts' in document && document.fonts.ready) {
          Promise.all([
            document.fonts.ready,
            document.fonts.load('1em "Bangers"')
          ])
          .then(() => {
            // ensure the font actually rendered before flipping
            requestAnimationFrame(markFontsLoaded);
          })
          .catch(markFontsLoaded);
        } else {
          window.addEventListener('load', markFontsLoaded, { once: true });
        }
      })();
    </script>
    <noscript>
      <style>
        .bangers-font { font-family: 'Bangers', 'Impact', 'Arial Black', sans-serif; }
      </style>
    </noscript>
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  </head>
  <body>
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 glass">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a href={`${basePath || '/'}`} class="flex flex-col">
              <span class="text-2xl font-bold hover:animate-glow transition-all duration-300 bangers-font" style="color: #7661d1; text-shadow: 1px 1px 2px rgba(0,0,0,0.5), 0 0 4px rgba(118, 97, 209, 0.3); letter-spacing: 2px; line-height: 1; margin-bottom: -2px;">
                Stupid Web Tricks
              </span>
              <span class="text-xs text-gray-400 font-normal">
                educational silliness from Rich Lewis
              </span>
            </a>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href={`${basePath || '/'}`} class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                Home
              </a>
              <a href={`${basePath}/html`} class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                HTML Tricks
              </a>
              <a href={`${basePath}/css`} class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                CSS Effects
              </a>
              <a href={`${basePath}/javascript`} class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                JavaScript
              </a>
              <a href={`${basePath}/svg-canvas`} class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                SVG & Canvas
              </a>
              <a href={`${basePath}/webgl`} class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
                WebGL
              </a>
            </div>
          </div>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button id="mobile-menu-button" class="text-gray-300 hover:text-white focus:outline-none focus:text-white">
              <HamburgerIcon class="h-6 w-6" aria-hidden="true" />
            </button>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu -->
      <div id="mobile-menu" class="md:hidden hidden">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 glass">
          <a href="/" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
            Home
          </a>
          <a href="/html" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
            HTML Tricks
          </a>
          <a href="/css" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
            CSS Effects
          </a>
          <a href="/javascript" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
            JavaScript
          </a>
          <a href={`${basePath}/svg-canvas`} class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
            SVG & Canvas
          </a>
          <a href={`${basePath}/webgl`} class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
            WebGL
          </a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-linear-to-r from-gray-900 to-gray-800 mt-20">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h3 class="text-2xl font-bold mb-4 bangers-font" style="color: #7661d1; text-shadow: 1px 1px 2px rgba(0,0,0,0.5), 0 0 4px rgba(118, 97, 209, 0.3); letter-spacing: 2px;">Stupid Web Tricks</h3>
          <p class="text-gray-400 mb-6">
            A collection of amazing web effects, animations, and techniques
          </p>
          <p class="text-gray-500 text-sm mt-6">
            Â© 2025 Rich Lewis. Built with Astro and deployed on
            <a
              href="https://github.com/richlewis007/stupid-web-tricks"
              class="inline-flex items-center gap-1 ml-1 text-gray-400 hover:text-white transition-colors duration-200 align-baseline"
            >
              <GithubIcon class="h-5 w-5 translate-y-[4px]" aria-hidden="true" />
              <span class="relative top-[4px]">GitHub Pages</span>
            </a>.
          </p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
          });
        }
      });
    </script>
  </body>
</html>
