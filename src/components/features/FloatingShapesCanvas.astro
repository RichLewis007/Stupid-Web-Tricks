---
// FloatingShapesCanvas.astro - Wrapper component using SoapBubbles
// This maintains backward compatibility while using the new reusable SoapBubbles component
import SoapBubbles from './SoapBubbles.astro';
---

<SoapBubbles 
  containerSelector=".hero-section"
  canvasId="floatingShapesCanvas"
  bubbleCount={6}
  minRadius={20}
  maxRadius={80}
  collisionSelectors={['.magnetic-text', '.hero-description', '.hero-button']}
  enableMousePop={true}
  enableMouseInteraction={true}
  zIndex={3}
  pointerEvents="none"
/>
