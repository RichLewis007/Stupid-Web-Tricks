<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    // Canvas drawing functionality
    const canvas = document.getElementById('drawingCanvas');
    if (canvas instanceof HTMLCanvasElement) {
      const ctx = canvas.getContext('2d');
      if (!ctx) return;

      let isDrawing = false;
      const colorPicker = document.getElementById('colorPicker');
      const brushSize = document.getElementById('brushSize');
      const clearBtn = document.getElementById('clearCanvas');

      /**
       * @param {MouseEvent} e
       */
      function startDrawing(e) {
        isDrawing = true;
        ctx.beginPath();
        ctx.moveTo(e.offsetX, e.offsetY);
      }

      /**
       * @param {MouseEvent} e
       */
      function draw(e) {
        if (!isDrawing) return;
        
        const lineWidth = brushSize instanceof HTMLInputElement ? Number(brushSize.value) || 1 : 1;
        const strokeStyle = colorPicker instanceof HTMLInputElement ? colorPicker.value : '#ffffff';

        ctx.lineWidth = lineWidth;
        ctx.lineCap = 'round';
        ctx.strokeStyle = strokeStyle;
        
        ctx.lineTo(e.offsetX, e.offsetY);
        ctx.stroke();
        ctx.beginPath();
        ctx.moveTo(e.offsetX, e.offsetY);
      }

      function stopDrawing() {
        isDrawing = false;
        ctx.beginPath();
      }

      canvas.addEventListener('mousedown', startDrawing);
      canvas.addEventListener('mousemove', draw);
      canvas.addEventListener('mouseup', stopDrawing);
      canvas.addEventListener('mouseout', stopDrawing);

      clearBtn?.addEventListener('click', () => {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
      });
    }

    // Particles system
    const particlesCanvas = document.getElementById('particlesCanvas');
    if (particlesCanvas instanceof HTMLCanvasElement) {
      const ctx = particlesCanvas.getContext('2d');
      if (!ctx) return;

      class Particle {
        constructor() {
          this.x = Math.random() * particlesCanvas.width;
          this.y = Math.random() * particlesCanvas.height;
          this.vx = (Math.random() - 0.5) * 2;
          this.vy = (Math.random() - 0.5) * 2;
          this.life = 1;
          this.maxLife = 1;
        }
        
        update() {
          this.x += this.vx;
          this.y += this.vy;
          this.life -= 0.01;
          
          if (this.life <= 0) {
            this.x = Math.random() * particlesCanvas.width;
            this.y = Math.random() * particlesCanvas.height;
            this.life = this.maxLife;
          }
        }
        
        draw() {
          ctx.globalAlpha = this.life;
          ctx.fillStyle = '#667eea';
          ctx.fillRect(this.x, this.y, 2, 2);
        }
      }
      
      /** @type {Particle[]} */
      const particles = [];

      // Create particles
      for (let i = 0; i < 50; i++) {
        particles.push(new Particle());
      }
      
      function animate() {
        ctx.clearRect(0, 0, particlesCanvas.width, particlesCanvas.height);
        
        particles.forEach(particle => {
          particle.update();
          particle.draw();
        });
        
        requestAnimationFrame(animate);
      }
      
      animate();
    }
  });
</script>